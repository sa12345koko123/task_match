<h2>登録情報編集</h2>
	<%= form_with model: @user, url: users_my_page_path(current_user), method: :patch, local: true do |f| %>
		<p>氏名</p>
			<%= f.text_field :family_name_kanji %>
			<%= f.text_field :first_name_kanji %>
		<p>カナ</p>
			<%= f.text_field :family_name_kana %>
			<%= f.text_field :first_name_kana %>
		<p>ニックネーム</p>
		　<%= f.text_field :handle_name %>
		<p>郵便番号</p>
			<%= f.text_field :postal_code %>
		<p>住所</p>
			<%= f.text_field :user_address %>
		<p>電話番号</p>
			<%= f.text_field :tele_number %>
		<p>メールアドレス</p>
			<%= f.text_field :email %>
		<p>プロフィール</p>
		　<%= f.text_area :profile %>
		<%= f.submit '編集内容を保存する' %>
		<%=link_to '退会する' , users_unsubscribe_path(@user) ,class: "btn btn-danger" %>
	<% end %>

</div>