<h2>登録情報編集</h2>
	<%= form_with model: @user, url: user_path(current_user), method: :patch, local: true do |f| %>
			<%= f.hidden_field :family_name_kanji %>
			<%= f.hidden_field :first_name_kanji %>
			<%= f.hidden_field :family_name_kana %>
			<%= f.hidden_field :first_name_kana %>
			<%= f.hidden_field :email %>
		<p>ニックネーム</p>
		　<%= f.text_field :handle_name %>
		<p>郵便番号</p>
			<%= f.text_field :postal_code %>
		<p>住所</p>
			<%= f.text_field :address %>
		<p>電話番号</p>
			<%= f.text_field :phone_number %>

		<p>プロフィール</p>
		　<%= f.text_area :profile %>
		<%= f.submit '編集内容を保存する' %>
	<% end %>
  <%= link_to '退会する' , "/users/#{@user.id}/unsubscribe" ,class: "btn btn-danger" %>
</div>