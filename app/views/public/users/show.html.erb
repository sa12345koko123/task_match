<div class="container">
	<div class="row">
  <table class="table table-striped">
		<h2>登録情報</h2>
		 <p><%= link_to '編集する',edit_user_path(current_user.id) %></p>
		 <p><%= link_to 'ホームに戻る', root_path %></p>

		<tr>
			<th>氏名</th>
			<td><%= @user.name_family %>
				<%= @user.name_first %>
			</td>
		</tr>
		<tr>
			<th>カナ</th>
			<td><%= @user.name_family_kana %>
				<%= @user.name_first_kana %>
			</td>
		</tr>
		<tr>
			<th>ニックネーム</th>
			<td><%= @user.handle_name %>
			</td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @user.postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @user.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @user.phone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>プロフィール</th>
			<td><%= @user.profile %></td>
		</tr>
<!--予約履歴一覧-->
  </table>
  </div>
</div>