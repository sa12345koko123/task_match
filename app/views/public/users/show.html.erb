<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<%#= image_tag @user.get_profile_image(200,200) %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 mt-4 text-center">
			<h2>登録情報</h2>
		</div>
	</div>

  <table class="table">
		<tr>
			<th>氏名</th>
			<td><%= @user.full_name %>
			</td>
		</tr>
		<tr>
			<th>カナ</th>
			<td><%= @user.kana_full_name %>
			</td>
		</tr>
		<tr>
			<th>ニックネーム</th>
			<td><%= @user.handle_name %>
			</td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @user.postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @user.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @user.phone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>プロフィール</th>
			<td><%= @user.profile %></td>
		</tr>
  </table>
  <div class="row">
  	<div class="col-md-6 text-center mt-4">
  		<% if @user.name_family != "guestuser" %>
		   <p><%= link_to '編集する',edit_user_path(current_user.id), class: "btn btn-success" %></p>&nbsp;&nbsp;&nbsp;
		  <% end %>
		</div>
		<div class="col-md-6 text-center mt-4">
		  <p><%= link_to 'ホームに戻る', root_path, class: "btn btn-secondary" %></p>
  	</div>
  </div>


  <div class="col-12 mt-4 text-center mx-auto">
    <h3>予約一覧</h3>
      <table class="table">
        <thead>
          <tr>
          	<th>会社名</th>
          	<th>依頼タイトル</th>
            <th>予約日</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
          	<td><%= order.job.company.company_name %></td>
            <td><%= link_to job_path(order.job.id) do %>
          	    <%= order.job.title %>
          	  <% end %>
          	</td>
            <td>
              <%= order.day %>
              <%= order.time %>
            </td>
            <td>
              <%= link_to '削除', user_order_path(current_user, order.id), method: :delete, data: { confirm: "削除してよろしいですか？", commit: "削除する", cancel: "やめる", title: "ご確認ください" } %>
            </td>
         </tr>
        <% end %>
        <% if @orders.blank? %>
          <tr>
            <td>予約はありません。</td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>