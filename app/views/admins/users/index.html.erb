<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="mt-2 p-2 text-center bg-secondary text-white">会員一覧（管理者用）</h3>
    </div>
  </div>

　<div class="row">
　  <table class="table">
　    <thead class="thead-light">
　      <th  scope="col" style="width: 5%">ユーザーID</th>
　      <th  scope="col" style="width: 5%"></th>
　      <th  scope="col" style="width: 5%">名前</th>
　      <th  scope="col" style="width: 5%">電話番号</th>
　      <th  scope="col" style="width: 5%">登録日</th>
　      <th  scope="col" style="width: 5%">ステータス</th>
　    </thead>
　    <% @users.each do |user| %>
　    <tbody>
　      <tr>
　        <td><%= user.id %></td>
　        <td><%= image_tag user.get_profile_image(100,100) %></td>
　        <td><%= link_to admins_user_path(user) do %>
　              <%= user.full_name %>
　            <% end %>
　        </td>
　        <td><%= user.phone_number %></td>
　        <td><%= user.created_at %></td>
　        <td><% if user.user_status == true %>
                <p class="text-success ">公開中</p>
              <% else %>
                <p class="text-secondary ">退会中</p>
              <% end %>
          </td>

　      </tr>
　    </tbody>
　    <% end %>
　  </table>
　</div>
　<div class="row">
    <div class="col-md-12 text-right mt-5">
　　　<%= link_to 'ホームに戻る', admins_admins_path %>
    </div>
  </div>
</div>