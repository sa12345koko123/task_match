<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="mt-2 p-2 text-center bg-secondary text-white">会員詳細（管理者用）</h3>
    </div>

    <table class="table table-striped">
		  <tr>
			  <th>氏名</th>
			  <td><%= @user.full_name %></td>
		  </tr>
		  <tr>
			  <th>カナ</th>
			  <td><%= @user.kana_full_name %></td>
		  </tr>
		  <tr>
			  <th>ニックネーム</th>
			  <td><%= @user.handle_name %></td>
		  </tr>
		  <tr>
			  <th>郵便番号</th>
			  <td><%= @user.postal_code %></td>
		  </tr>
		  <tr>
			  <th>住所</th>
			  <td><%= @user.address %></td>
		  </tr>
		  <tr>
			  <th>電話番号</th>
		    <td><%= @user.phone_number %></td>
		  </tr>
		  <tr>
			  <th>メールアドレス</th>
			  <td><%= @user.email %></td>
		  </tr>
		  <tr>
			  <th>プロフィール</th>
			  <td><%= @user.profile %></td>
		  </tr>

    </table>
  </div>
  <div class="row">
    <div class="col-md-12 text-center mt-5">
    	<%= link_to "退会させる",  "/admins/users/#{@user.id}/withdrawal", method: :patch , class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right mt-5">
　　　<%= link_to '顧客一覧に戻る', admins_users_path %>
    </div>
  </div>
</div>
