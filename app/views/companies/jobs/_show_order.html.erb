<h4>7日間分の商談アクセス数</h4>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>６日前</th>
        <th>５日前</th>
        <th>４日前</th>
        <th>３日前</th>
        <th>２日前</th>
        <th>１日前</th>
        <th>今日</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @orders.created_6day_ago.count %></td>
        <td><%= @orders.created_5day_ago.count %></td>
        <td><%= @orders.created_4day_ago.count %></td>
        <td><%= @orders.created_3day_ago.count %></td>
        <td><%= @orders.created_2day_ago.count %></td>
        <td><%= @orders.created_yesterday.count %></td>
        <td><%= @orders.created_today.count %></td>
      </tr>
    </tbody>
  </table>
  <canvas id="myLineChart"></canvas>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
  <script>
    // $(document).on('turbolinks:load', function() {
      var ctx = document.getElementById("myLineChart");
      var myLineChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
          datasets: [
            {
              label: '商談アクセス数',
              data: [
                <%= @orders.created_6day_ago.count %>,
                <%= @orders.created_5day_ago.count %>,
                <%= @orders.created_4day_ago.count %>,
                <%= @orders.created_3day_ago.count %>,
                <%= @orders.created_2day_ago.count %>,
                <%= @orders.created_yesterday.count %>,
                <%= @orders.created_today.count %>
              ],
              borderColor: "rgba(0,0,255,1)",
              backgroundColor: "rgba(0,0,0,0)",
              tension: 0.4
            }
          ],
        },
        options: {
          title: {
            display: true,
            text: '7日間の商談アクセス数の比較'
          },
          responsive: true,
          scales: {
            y:{
              suggestedMin: 0,
              suggestedMax: 100,
              stepSize: 10
            },
            x:{
              stacked: true
            },
          },
        },
      });
    // });
  </script>