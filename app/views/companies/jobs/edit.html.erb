<div class="container">
  <div class="row">
    <h4 class="mt-2 p-2 text-center bg-secondary text-white col-md-12">仕事依頼編集画面</h4>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2 mt-4">
　　<%= form_with model: @job, url: companies_company_job_path(@company) do |f| %>
  　　<table class="table table-borderless h6">
        <tr>
          <td>ご依頼タイトル</td>
          <td><%= f.text_field :title, placeholder:"ご依頼タイトル" , class: "form-control" %></td>
        </tr>
        <tr>
          <td>単価</td>
          <td><%= f.text_field :unit_price, placeholder:"1000" , class: "form-control" %></td>
        </tr>
        <tr>
          <td>ご依頼内容/説明</td>
          <td><%= f.text_area :description, size: "50x10", placeholder:"ここに説明文を記述します" , class: "form-control" %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>
            <%= f.select :job_status, [['受付中', true], ['締切中', false]] %>
          </td>
        </tr>
      </table>
      <div class="col-md-12 text-center">
      <%= f.submit '更新する', class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
    <div class="col-md-12 text-center mt-3">
      <%= link_to '仕事一覧', companies_company_jobs_path(@company), class: 'btn btn-secondary' %>
    </div>
  </div>
</div>